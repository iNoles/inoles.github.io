---
import { Image } from 'astro:assets';
import { name, title, github, linkedin } from '../site_metadata.json';
import profile from '../../public/images/profile.jpg';
---

<div class="block mb-6 md:flex">
  <div class="w-full max-w-37">
    <Image
      class="rounded-full transform transition-all duration-150 hover:scale-105"
      src={profile}
      width="150"
      height="150"
      loading="eager"
      alt={name}
    />
  </div>
  <div class="flex-none pt-6 md:pt-1 md:flex-1 md:pl-20">
    <h1 class="text-5xl text-gray-900 dark:text-white font-bold leading-tight hover:text-black dark:hover:text-blue-200">
      {name}
    </h1>
    <p class="text-gray-600 dark:text-gray-200">
      {title}
    </p>
    <ul class="mt-6 uppercase tracking-wider">
      <li class="inline list-none pr-4">
        <a class="inline-block py-2 font-semibold text-xs text-gray-600 hover:text-black dark:text-gray-100 dark:hover:text-blue-400" href={`https://github.com/${github}`}>GitHub</a>
      </li>
      <li class="inline list-none pr-4">
        <a class="inline-block py-2 font-semibold text-xs text-gray-600 hover:text-black dark:text-gray-100 dark:hover:text-blue-400" href={linkedin}>LinkedIn</a>
      </li>
      <li class="inline list-none pr-4">
         <a class="inline-block py-2 font-semibold text-xs text-gray-600 hover:text-black dark:text-gray-100 dark:hover:text-blue-400" href="https://docs.google.com/document/d/1NlWMKVw4cl1Qz6ALPdX06ZnhbTkAPHBSSkRhQFWwEYY/export?format=pdf">Resume</a>
      </li>
    </ul>
  </div>
</div>
