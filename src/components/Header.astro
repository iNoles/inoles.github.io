---
import { Image } from 'astro:assets';
import { name, github, linkedin } from '../site_metadata.json';
import profile from '../../public/images/profile.jpg';
import Typewriter from "astro-typewriter";
---

<header class="custom-header block mb-6 md:flex bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-md rounded-2xl p-6 md:p-8 transition-colors duration-300">
  <div class="w-full max-w-37 flex-shrink-0">
    <Image
      class="rounded-full transform transition-transform duration-150 hover:scale-105"
      src={profile}
      width="150"
      height="150"
      loading="eager"
      alt=""
    />
  </div>
  <div class="flex-none pt-6 md:pt-1 md:flex-1 md:pl-8">
    <h1 class="text-5xl font-bold text-gray-900 dark:text-gray-100 transition-colors duration-200">{name}</h1>
    <p class="opacity-80 mt-2 text-gray-700 dark:text-gray-300">
      <Typewriter
        messages={[
          "Full Stack Developer",
          "Mobile Developer",
          "Software Engineer",
          "Problem Solver",
          "Team Collaborator"
        ]}
        writeSpeed={80}    
        deleteSpeed={40}   
        waitWritten={2500} 
        waitDeleted={500}
      />

    </p>
    <ul class="mt-6 flex gap-4 flex-wrap">
      {[
        { href: `https://github.com/${github}`, label: "GitHub", icon: "github" },
        { href: linkedin, label: "LinkedIn", icon: "linkedin" },
        { href: "https://docs.google.com/document/d/1SJ2DIJDTYp_VTqL21_DZoIIEk0ZF2qLv9j462PdS2bY/edit?usp=sharing", label: "Resume", icon: null }
      ].map(({ href, label, icon }) => (
        <li>
          <a
            class="inline-flex items-center px-4 py-2 text-xs font-semibold uppercase tracking-wider border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-600 hover:border-gray-500 dark:hover:border-gray-500 transition-colors duration-150"
            href={href}
          >
            {icon === "github" && (
              <svg class="lucide lucide-github mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                <path d="M9 18c-4.51 2-5-2-7-2"></path>
              </svg>
            )}
            {icon === "linkedin" && (
              <svg class="lucide lucide-linkedin mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                <rect width="4" height="12" x="2" y="9"></rect>
                <circle cx="4" cy="4" r="2"></circle>
              </svg>
            )}
            <span>{label}</span>
          </a>
        </li>
      ))}
      <span
        class="inline-flex items-center px-4 py-2 text-xs font-semibold uppercase tracking-wider border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-100 hover:bg-gray-100 dark:hover:bg-gray-600 hover:border-gray-500 dark:hover:border-gray-500 transition-colors duration-150 cursor-pointer select-none"
      >
      Melbourne, Florida
    </span>
    </ul>
  </div>
</header>
