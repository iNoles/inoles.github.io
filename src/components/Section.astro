---
interface Props {
  title: string;
}

const { title } = Astro.props;

---

<div class="block pt-12 md:flex">
  <div class="pb-6 md:w-full md:max-w-37 md:p-0">
    <h2 class="text-base font-medium leading-relaxed tracking-wide uppercase text-gray-800 dark:text-gray-100">{title}</h2>
  </div>
  <div class="flex-none text-lg text-gray-600 dark:text-gray-200 font-light md:flex-1 md:pl-20">
    <slot />
  </div>
</div>
