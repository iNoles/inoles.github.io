---
interface Props {
  name: string;
  date?: string;
  description: string;
  link?: string;
}

const { name, date = "", description, link = "" } = Astro.props;
const linkClass = "hover:underline hover:text-black dark:hover:text-blue-400";
---

<div class="mb-6">
  {link ? (
    <h3 class={`font-semibold text-gray-900 dark:text-white pb-1 ${linkClass}`}>
      <a href={link}>{name}</a>
    </h3>
  ) : (
    <h3 class="font-semibold text-gray-900 dark:text-white pb-1">{name}</h3>
  )}
  {date && <h3 class="italic text-gray-600 dark:text-gray-300 pb-1">{date}</h3>}
  <p class="text-md text-gray-600 dark:text-gray-200 font-light">{description}</p>
</div>