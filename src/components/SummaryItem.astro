---
interface Props {
  name: string;
  date?: string;
  description: string;
  link?: string;
}

const { name, date = "", description, link = "" } = Astro.props;
const linkClass = "hover:underline hover:text-black dark:hover:text-blue-400";
---

<div class="mb-6 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-md p-6 transition hover:shadow-lg">
  {link ? (
    <h3 class="font-semibold text-gray-900 dark:text-white pb-1">
      <a href={link} target="_blank" class={linkClass} aria-label={`${name} (opens in a new tab)`}>
        {name}
      </a>
    </h3>
  ) : (
    <h3 class="font-semibold text-gray-900 dark:text-white pb-1">{name}</h3>
  )}
  
  {date && (
    <time
      class="italic text-gray-600 dark:text-gray-300 pb-1 block"
      datetime={date}
    >
      {date}
    </time>
  )}
  
  <p class="text-md text-gray-600 dark:text-gray-200 font-light">
    {description}
  </p>
</div>
