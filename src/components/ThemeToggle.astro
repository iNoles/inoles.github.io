<div
  id="theme-toggle"
  class="cursor-pointer select-none text-black dark:text-white transition-colors"
  aria-label="Toggle theme"
>
  <svg
    viewBox="0 0 24 24"
    class="w-4 h-4 transition-transform duration-300 dark:rotate-180"
    fill="currentColor"
  >
    <!-- half-moon / circle hybrid -->
    <path d="M12 2a9 9 0 1 0 0 18a7 7 0 1 1 0-18z" />
  </svg>
</div>

<script is:inline>
  const root = document.documentElement;
  const saved = localStorage.getItem('theme');

  if (saved === 'dark') {
    root.classList.add('dark');
  }

  document
    .getElementById('theme-toggle')
    .addEventListener('click', () => {
      const isDark = root.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
</script>
